# standard libraries
APPL_TARGET = ccp
##APPL_TARGET += libsvc libstr libsys

# ----------------------------------------------------------------------------
.PHONY: all clean

all: $(APPL_TARGET)

$(APPL_TARGET):
	cd ../../$@/build/$(TETYPE)_$(MACHINE) ; \
	$(MAKE) ; \
	$(MAKE) install

clean:
	@( cd ../.. ; \
	for dir in $(APPL_TARGET); do \
		( cd $$dir/build/$(TETYPE)_$(MACHINE) ; $(MAKE) clean clean_install ) ; \
	done )


